  "scripts": {
    "build": "nest build base-system",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name auto",
    "prisma:update": "prisma migrate dev --name auto && prisma generate",
    "prisma:studio": "prisma studio",
    "start": "nest start base-system",
    "start:dev": "cross-env NODE_ENV=development nest start base-system --watch",
    "start:dev:demo": "cross-env NODE_ENV=development nest start base-demo --watch",
    "start:debug": "cross-env NODE_ENV=development nest start base-system --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/apps/base-system/src/main",
    "pm2:start:prod": "cross-env NODE_ENV=production pm2 start ecosystem.config.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" \"libs/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/base-system/test/jest-e2e.json"
  },
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/static": "^8.1.1",
    "@keyv/redis": "^4.3.2",
    "@nest-lab/throttler-storage-redis": "^1.1.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/cqrs": "^11.0.3",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.0.12",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.0.12",
    "@nestjs/schedule": "^5.0.1",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.5.0",
    "ali-oss": "^6.22.0",
    "bcryptjs": "^3.0.2",
