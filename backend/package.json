  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@types/ali-oss": "^6.16.11",
    "@types/cache-manager": "^4.0.6",
    "@types/crypto-js": "^4.2.2",
    "@types/gradient-string": "^1.1.6",
    "@types/jest": "29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "22.13.5",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "gradient-string": "^2.0.2",
    "jest": "29.7.0",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/$1",
      "@config/(.*)": "<rootDir>/config/$1",
      "@lib/(.*)": "<rootDir>/lib/$1",
      "@tests/(.*)": "tests/$1",
      "^@lib/bootstrap(|/.*)$": "<rootDir>/libs/bootstrap/src/$1",
      "^@lib/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@lib/typings(|/.*)$": "<rootDir>/libs/typings/src/$1",
      "^@lib/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@lib/global(|/.*)$": "<rootDir>/libs/global/src/$1",
      "^@lib/constants(|/.*)$": "<rootDir>/libs/constants/src/$1",
      "^@lib/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@lib/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@lib/shared/redis(|/.*)$": "<rootDir>/libs/shared/redis/src/$1",
      "^@lib/shared/prisma(|/.*)$": "<rootDir>/libs/shared/prisma/src/$1",
      "^@lib/shared/oss(|/.*)$": "<rootDir>/libs/shared/oss/src/$1",
      "^@lib/shared/ip2region(|/.*)$": "<rootDir>/libs/shared/ip2region/src/$1",
      "^@lib/shared/errors(|/.*)$": "<rootDir>/libs/shared/errors/src/$1",
      "^@lib/infra/adapter(|/.*)$": "<rootDir>/libs/infra/adapter/src/$1",
      "^@lib/infra/casbin(|/.*)$": "<rootDir>/libs/infra/casbin/src/$1",
      "^@lib/infra/decorators(|/.*)$": "<rootDir>/libs/infra/decorators/src/$1",
      "^@lib/infra/filters(|/.*)$": "<rootDir>/libs/infra/filters/src/$1",
      "^@lib/infra/guard(|/.*)$": "<rootDir>/libs/infra/guard/src/$1",
      "^@lib/infra/interceptors(|/.*)$": "<rootDir>/libs/infra/interceptors/src/$1",
      "^@lib/infra/rest(|/.*)$": "<rootDir>/libs/infra/rest/src/$1",
      "^@lib/infra/strategies(|/.*)$": "<rootDir>/libs/infra/strategies/src/$1",
      "^@lib/infra/crypto(|/.*)$": "<rootDir>/libs/infra/crypto/src/$1"
    },
    "roots": [
      "<rootDir>/libs/",
      "<rootDir>/apps/"
    ]
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register prisma/seeds"
  }
}
