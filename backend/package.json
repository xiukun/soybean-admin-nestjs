    "fastify": "^5.2.2",
    "ioredis": "^5.6.0",
    "js-yaml": "^4.1.0",
    "keyv": "^5.3.2",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
