#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check TypeScript compilation
echo "ğŸ“ Checking TypeScript compilation..."
npm run check-imports
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript compilation failed"
  exit 1
fi

# Check for complex relative paths
echo "ğŸ”— Checking for complex relative paths..."
COMPLEX_PATHS=$(git diff --cached --name-only | grep -E '\.(ts|tsx)$' | xargs grep -l "from ['\"]\.\.\/\.\.\/\.\." 2>/dev/null || true)
if [ -n "$COMPLEX_PATHS" ]; then
  echo "âŒ Found complex relative paths in staged files:"
  echo "$COMPLEX_PATHS"
  echo ""
  echo "ğŸ’¡ Run 'npm run update-imports' to fix automatically"
  exit 1
fi

# Run ESLint on staged files
echo "ğŸ”§ Running ESLint on staged files..."
STAGED_FILES=$(git diff --cached --name-only | grep -E '\.(ts|tsx)$' | tr '\n' ' ')
if [ -n "$STAGED_FILES" ]; then
  npx eslint $STAGED_FILES
  if [ $? -ne 0 ]; then
    echo "âŒ ESLint found issues"
    echo "ğŸ’¡ Run 'npm run lint' to fix automatically"
    exit 1
  fi
fi

# Run Prettier on staged files
echo "ğŸ’… Checking code formatting..."
if [ -n "$STAGED_FILES" ]; then
  npx prettier --check $STAGED_FILES
  if [ $? -ne 0 ]; then
    echo "âŒ Code formatting issues found"
    echo "ğŸ’¡ Run 'npx prettier --write $STAGED_FILES' to fix"
    exit 1
  fi
fi

# Validate path aliases configuration
echo "ğŸ” Validating path aliases..."
npm run validate-aliases
if [ $? -ne 0 ]; then
  echo "âŒ Path aliases validation failed"
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
