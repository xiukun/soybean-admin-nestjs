#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Check TypeScript compilation
echo "📝 Checking TypeScript compilation..."
npm run check-imports
if [ $? -ne 0 ]; then
  echo "❌ TypeScript compilation failed"
  exit 1
fi

# Check for complex relative paths
echo "🔗 Checking for complex relative paths..."
COMPLEX_PATHS=$(git diff --cached --name-only | grep -E '\.(ts|tsx)$' | xargs grep -l "from ['\"]\.\.\/\.\.\/\.\." 2>/dev/null || true)
if [ -n "$COMPLEX_PATHS" ]; then
  echo "❌ Found complex relative paths in staged files:"
  echo "$COMPLEX_PATHS"
  echo ""
  echo "💡 Run 'npm run update-imports' to fix automatically"
  exit 1
fi

# Run ESLint on staged files
echo "🔧 Running ESLint on staged files..."
STAGED_FILES=$(git diff --cached --name-only | grep -E '\.(ts|tsx)$' | tr '\n' ' ')
if [ -n "$STAGED_FILES" ]; then
  npx eslint $STAGED_FILES
  if [ $? -ne 0 ]; then
    echo "❌ ESLint found issues"
    echo "💡 Run 'npm run lint' to fix automatically"
    exit 1
  fi
fi

# Run Prettier on staged files
echo "💅 Checking code formatting..."
if [ -n "$STAGED_FILES" ]; then
  npx prettier --check $STAGED_FILES
  if [ $? -ne 0 ]; then
    echo "❌ Code formatting issues found"
    echo "💡 Run 'npx prettier --write $STAGED_FILES' to fix"
    exit 1
  fi
fi

# Validate path aliases configuration
echo "🔍 Validating path aliases..."
npm run validate-aliases
if [ $? -ne 0 ]; then
  echo "❌ Path aliases validation failed"
  exit 1
fi

echo "✅ All pre-commit checks passed!"
