# Lowcode Platform Backend Environment Variables

# Application
NODE_ENV=development
APP_PORT=3002

# Database Configuration - Lowcode Schema
DATABASE_URL="postgresql://soybean:soybean@123.@localhost:25432/soybean-admin-nest-backend?schema=lowcode"
DIRECT_DATABASE_URL="postgresql://soybean:soybean@123.@localhost:25432/soybean-admin-nest-backend?schema=lowcode"

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=26379
REDIS_PASSWORD=redis@123.
REDIS_DB=2

# JWT Configuration (Shared with main backend)
JWT_SECRET="JWT_SECRET-soybean-admin-nest!@#123."
JWT_EXPIRE_IN=3600
REFRESH_TOKEN_SECRET="REFRESH_TOKEN_SECRET-soybean-admin-nest!@#123."
REFRESH_TOKEN_EXPIRE_IN=7200

# Swagger Documentation
DOC_SWAGGER_ENABLE=true
DOC_SWAGGER_PATH=api-docs

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN="http://localhost:9527,http://127.0.0.1:9527,http://localhost:9555,http://127.0.0.1:9555"
CORS_METHODS="GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS"
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# Service Communication
SERVICE_NAME=lowcode-platform-backend
BACKEND_SERVICE_URL=http://localhost:9528
AMIS_BACKEND_URL=http://localhost:9522

# Code Generation
CODE_GENERATION_OUTPUT_PATH=../amis-lowcode-backend/src
TEMPLATE_PATH=./templates
GENERATED_CODE_PATH=./generated

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Features
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_MODE=true