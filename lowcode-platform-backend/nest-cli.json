{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
    "lowcode-platform": {
      "type": "application",
      "root": "",
      "entryFile": "main",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json",
        "assets": [
          {
            "include": "**/*.(conf|yaml|xdb|hbs)",
            "outDir": "./dist/src"
          }
        ],
        "watchAssets": true
      }
    }
  },
  "monorepo": false,
  "root": ""
}
